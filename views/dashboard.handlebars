<section class="">
    <section class="container text-center">
        <div class="row">
            <div class="col">
                <h1>Dashboard</h1>
            </div>
        </div>
            {{#each posts}}
            <div class="card">
                <a class="btn card-block stretched-link text-decoration-none p-0" id="openPostBtn" href="/newPost/edit/{{ id }}">
                <h5 class="card-header row mx-0">
                    <p class="col">{{ title }}</p>
                    <p class="col">{{ dateFormat date_created }}</p>
                </h5></a>
            </div>
            {{/each}}
        </div>
        <a type="button" class="btn btn-primary" href="/newPost">New Post</a>
    </section>
</section>

</section>
