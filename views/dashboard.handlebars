<section class="">
    <section class="container text-center">
        <div class="row">
            <div class="col">
                <h1 class="my-4">Dashboard</h1>
            </div>
        </div>
            {{#each posts}}
            <div class="card my-2">
                <a class="btn card-block stretched-link text-decoration-none p-0 border border-0" id="openPostBtn" href="/newPost/edit/{{ id }}">
                <h5 class="card-header row d-flex align-items-center mx-0">
                    <p class="col mb-0">{{ title }}</p>
                    <p class="col mb-0">{{ dateFormat date_created }}</p>
                </h5></a>
            </div>
            {{/each}}
        </div>
        <a type="button my-4" class="btn btn-primary" href="/newPost">New Post</a>
    </section>
</section>

</section>
