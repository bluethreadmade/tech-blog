<section class="">
    <section class="container text-center">
        <div class="row">
            <div class="col">
                <h1>The Tech Blog</h1>
            </div>
            <form class="form mb-3" id="editForm">
                <label for="postTitle" class="form-label d-flex justify-content-start">Post Title</label>
                <input type="text" class="form-control mb-2" id="postTitle" rows="1" placeholder="Title" value="{{ post.title }}" name="title"></input>
                <label for="postContent" class="form-label d-flex justify-content-start">Post Content</label>
                <input type="text" class="form-control" id="postContent" style="height: 100px" placeholder="Post" value="{{ post.content }}" name="content"></input>
                <button type="submit" class="btn btn-primary m-2" id="editPostButton">Edit Post</button>
                <button type="button" class="btn btn-primary m-2" id="deletePostButton">Delete Post</button>
            </form>
    </section>
</section>

</section>
<script src="/js/post.js"></script>