<section class="">
    <section class="container text-center">
        <div class="row">
            <div class="col">
                <h1 class="my-4">The Tech Blog</h1>
            </div>
        </div>
            {{#each posts}}
            <div class="card my-2">
                <a class="btn card-block stretched-link text-decoration-none p-0 border border-0" id="openPostBtn" href="/onePost/{{ id }}"></a>
                <div class="card-header row d-flex align-items-center mx-0">
                    <h5 class="col mb-0 text-start">{{ title }}</h5>
                    <p class="col mb-0 text-end">Posted By: {{ user.username }} on {{ dateFormat date_created }}</p>
                </div>
                <div class="card-body">
                    <p class="card-text text-start">{{ content }}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</section>

</section>